{
  "extends": "standard",
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "rules": {
    "indent": ["error", 2],
    "prefer-const": "off",
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
